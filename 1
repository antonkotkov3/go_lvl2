package main

import (
	"fmt"
	"time"
)

func main() {
	slice := []int{0,1,2,3,4,5}
	panicTime:=time.Now()
	err1:=fmt.Errorf("Время обнаружения ошибки: %v ",panicTime)//собственная ошибка

	defer func () {

		if v := recover(); v != nil {

			fmt.Println("паника,я тебя поймал!",v)
			fmt.Println(err1)


		}

	}()


fmt.Println("Длина слайса:", slice[len(slice)])
}//panic
