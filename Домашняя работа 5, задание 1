package main

import (
	"fmt"
	"sync"
	"time"
)

const count = 100

func main() {
	var mutex sync.Mutex
	var counter = 0 //общий счетчик, который будут инкрементировать горутины

	ch := make(chan struct{}, count)
	for i := 0; i < count; i += 1 {
		go func() {
			ch <- struct{}{} //фиксация записи горутины в канал
			mutex.Lock()     //залочим инкрементирование счетчика
			counter += 1     //инкрементирование счетчика
			mutex.Unlock()
		}()
	}
	time.Sleep(3 * time.Second)
	close(ch)
	var i = 0
	for range ch {
		i += 1
	}

	fmt.Println(i)       //вывод количества сообщений в канал
	fmt.Println(counter) //вывод количества инкрементаций счетчика

}
