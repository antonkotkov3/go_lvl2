package main

import (
	"fmt"
	"sync"
	"time"
)

func main() {
	var mutex sync.Mutex
	var counter = 0 // экземпляр общего счетчика

	ch := make(chan int, 1000)

	for i := 0; i < 1001; i++ {
		go func() {
			ch <- i      //запись в канал
			mutex.Lock() //лочим счетчик
			defer mutex.Unlock()
			counter += 1 //инкрементирование счетчика

		}()
	}
	time.Sleep(3 * time.Second)
	close(ch)
	v := 0
	for range ch {

		v += 1
	}

	fmt.Println(v)       //показания количества записей в канал
	fmt.Println(counter) //показания счетчика

}
